<h1>Quiz #<%= @the_quiz.id %> details</h1>

<a href="/quizzes">Go back</a>

<dl>
  <dt>Topic</dt>
  <dd><%= @the_quiz.topic %></dd>
  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@the_quiz.created_at) %></dd>
</dl>

<hr>

<% Message.all.where({ :quiz_id => @the_quiz.id }).each do |message| %>
  <dl>
    <dt><%= message.role %></dt>
    <dd><%= message.content %></dd>
  </dl>
<% end %>
